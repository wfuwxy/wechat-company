<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>cc.pp.media</groupId>
  <artifactId>weixin</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>weixin</name>
  <url>http://maven.apache.org</url>
  
  <!-- 工程模块 -->
  <modules>
  	<module>weixin-common</module>
  	<module>weixin-web</module>
    <module>weixin-core</module>
  </modules>
  
  <!-- 公用变量 -->
  <properties>
    <weixin.version>1.0.0-SNAPSHOT</weixin.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
  <dependencyManagement>
  <dependencies>
    <!-- models -->
	<dependency>
		<groupId>cc.pp.media</groupId>
		<artifactId>weixin-common</artifactId>
		<version>${weixin.version}</version>
	</dependency>
	<dependency>
		<groupId>cc.pp.media</groupId>
		<artifactId>weixin-core</artifactId>
		<version>${weixin.version}</version>
	</dependency>
    <!-- 通用处理工具-->
	<dependency>
		<groupId>log4j</groupId>
		<artifactId>log4j</artifactId>
		<version>1.2.16</version>
	</dependency>
	<dependency>
		<groupId>dom4j</groupId>
		<artifactId>dom4j</artifactId>
		<version>1.6.1</version>
	</dependency>
	<dependency>
		<groupId>commons-lang</groupId>
		<artifactId>commons-lang</artifactId>
		<version>2.1</version>
	</dependency>
	<dependency>
		<groupId>com.belerweb</groupId>
		<artifactId>pinyin4j</artifactId>
		<version>2.5.0</version>
	</dependency>
	<dependency>
		<groupId>junit</groupId>
		<artifactId>junit</artifactId>
		<version>3.8</version>
	</dependency>
	
	<!-- Http工具-->
	<dependency>
		<groupId>javax.servlet</groupId>
		<artifactId>servlet-api</artifactId>
		<version>2.5</version>
	</dependency> 
	<dependency>
		<groupId>commons-httpclient</groupId>
		<artifactId>commons-httpclient</artifactId>
		<version>3.1</version>
	</dependency>

	<!-- JSON工具-->
	<dependency>
		<groupId>org.codehaus.jackson</groupId>
		<artifactId>jackson-mapper-lgpl</artifactId>
		<version>1.9.12</version>
	</dependency>

	<!-- 框架 -->
	<dependency>
		<groupId>org.springframework</groupId>
		<artifactId>spring</artifactId>
		<version>2.5.6.SEC03</version>
	</dependency>
	
	<!-- RpcClient,用于调用PHP提供的接口获取T2平台的数据 -->
	<dependency>
		<groupId>cc.pp.smarttalk</groupId>
		<artifactId>smarttalk-rule</artifactId>
		<version>1.0.0-SNAPSHOT</version>
	</dependency>
	
  </dependencies>
  </dependencyManagement>
  
  <!-- 发布包到指定服务器的配置 -->
  <distributionManagement>    
    <repository>    
      <id>ppcc-releases</id>    
      <name>Nexus Release Repository</name>    
      <url>http://192.168.25.100:8081/nexus/content/repositories/releases/</url>    
    </repository>    
    <snapshotRepository>    
      <id>ppcc-snapshots</id>    
      <name>Nexus Snapshot Repository</name>    
      <url>http://192.168.25.100:8081/nexus/content/repositories/snapshots/</url>    
    </snapshotRepository>    
  </distributionManagement>

  <!-- 打包配置 -->
  <build>
	<finalName>weixin</finalName>
	<plugins>
		<plugin>
			<artifactId>maven-compiler-plugin</artifactId>
			<configuration>
				<target>1.6</target>
				<source>1.6</source>
			</configuration>
		</plugin>
		<plugin>
			<groupId>org.apache.maven.plugins</groupId>
			<artifactId>maven-source-plugin</artifactId>
			<executions>
				<execution>
					<id>attach-sources</id>
					<goals>
						<goal>jar</goal>
					</goals>
				</execution>
			</executions>
		</plugin>
	</plugins>
  </build>
</project>